# Modern Hosting Panel Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
POSTGRES_DB=hosting_panel
POSTGRES_USER=hosting_user
POSTGRES_PASSWORD=hosting_password_123

# Redis Configuration
REDIS_PASSWORD=redis_password_123

# Application Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@localhost.com
ADMIN_PASSWORD=admin123

# SSL Configuration
CERTBOT_EMAIL=admin@localhost
SSL_PROVIDER=letsencrypt

# Web Server Configuration
WEB_SERVER=nginx
DEFAULT_PHP_VERSION=8.1
PHP_VERSIONS=["7.4","8.0","8.1","8.2"]

# CORS Configuration
ALLOWED_HOSTS=["*"]

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Docker Configuration
DOCKER_ENABLED=true

# Email Configuration (set to true to enable)
EMAIL_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# DNS Configuration (set to true to enable)
DNS_ENABLED=false
DNS_SERVER=bind9
